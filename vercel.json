{
    "version": 2,
    "builds": [
      {
        "src": "main.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["public/**/*", "views/**/*", "uploads/**/*"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/main.js"
      }
    ],
    "env": {
      "PORT": "5000",
      "DB_URI": "@DB_URI"
    }
  }
  