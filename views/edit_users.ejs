<%- include('layout/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
           <div class="shadow-lg">
            <div class="card-header bg-success">
                <h3 class="text-light text-center">Atualizar Coleta (<%= user.nome %>)</h3>
            </div>
            <div class="card-body p-4">
                <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="nome">Nome</label>
                        <input type="text" name="nome" class="form-control form-control-lg" placeholder="Digite o Nome" value="<%= user.nome %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="password">Senha</label>
                        <input type="password" name="password" class="form-control form-control-lg" placeholder="Digite a Senha" required>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control form-control-lg" placeholder="Digite o email" value="<%= user.email %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefone">Telefone</label>
                        <input type="tel" name="telefone" class="form-control form-control-lg" placeholder="Digite o Telefone" value="<%= user.telefone %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="status">Status</label>
                        <select name="status" class="form-control form-control-lg" required>
                            <option value="solicitado" <%= user.status === 'solicitado' ? 'selected' : '' %>>Solicitado</option>
                            <option value="coletado" <%= user.status === 'coletado' ? 'selected' : '' %>>Coletado</option>
                        </select>
                    </div>
                    <% if (user.status === 'coletado' && user.dataHoraColeta) { %>
                        <div class="mb-3">
                            <label for="dataHoraColeta">Data/Hora da Coleta</label>
                            <input type="text" class="form-control form-control-lg" value="<%= user.dataHoraColeta.toLocaleString() %>" readonly>
                        </div>
                    <% } %>
                    <div class="mb-3">
                        <label for="imagem" class="form-label"> Selecione a Imagem</label>
                        <input type="file" name="imagem" class="form-control form-control-lg">
                        <img src="/<%= user.imagem %>" width="100" class="img-thumbnail mt-1">
                    </div>
                    <input type="hidden" name="old_image" value="<%= user.imagem %>">
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Atualizar Coleta" class="btn btn-success btn-lg">
                    </div>
                </form>
            </div>
           </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>